<UserControl x:Class="CoPilot.CoPilot.View.SplashScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid Background="{StaticResource IconBackground}">
        <Grid 
            Width="400"
            Height="400"
            x:Name="Screen" 
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            RenderTransformOrigin="0.5,0.5">
            <Grid.RenderTransform>
                <CompositeTransform Rotation="0"/>
            </Grid.RenderTransform>
            <Image 
                HorizontalAlignment="Center"
                VerticalAlignment="Center" Source="/Resources/Images/Splash/SplashScreenImage.jpg" Stretch="UniformToFill"/>
            <ProgressBar x:Name="Progress" IsIndeterminate="True" VerticalAlignment="Bottom" Margin="20" Background="#19FFFFFF" Foreground="White"/>
        </Grid>
    </Grid>

</UserControl>