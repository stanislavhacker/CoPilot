<?xml version="1.0" encoding="utf-8" ?>
<grammar version="1.0" xml:lang="en-GB" root="amount" tag-format="semantics/1.0" 
         xmlns="http://www.w3.org/2001/06/grammar" 
         xmlns:sapi="http://schemas.microsoft.com/Speech/2002/06/SRGSExtensions">

  <rule id="amount">
    <tag>out.Amount = "";</tag>
    <item repeat="1-6">
      <ruleref uri="#number"/>
      <tag>out.Amount += rules.latest();</tag>
    </item>

    <item repeat="0-1">
      <ruleref uri="#dot"/>
      <tag>out.Amount += ".";</tag>
    </item>

    <item repeat="0-3">
      <ruleref uri="#number"/>
      <tag>out.Amount += rules.latest();</tag>
    </item>
  </rule>

  <rule id="dot">
    <one-of>
      <item>
        point <tag> out = "." ; </tag>
      </item>
      <item>
        dot <tag> out = "." ; </tag>
      </item>
    </one-of>
  </rule>

  <rule id="number">
    <one-of>
      <item>
        zero <tag> out = 0; </tag>
      </item>
      <item>
        nil <tag> out = 0; </tag>
      </item>
      <item>
        one <tag> out = 1; </tag>
      </item>
      <item>
        two <tag> out = 2; </tag>
      </item>
      <item>
        three <tag> out = 3; </tag>
      </item>
      <item>
        four <tag> out = 4; </tag>
      </item>
      <item>
        five <tag> out = 5; </tag>
      </item>
      <item>
        six <tag> out = 6; </tag>
      </item>
      <item>
        seven <tag> out = 7; </tag>
      </item>
      <item>
        eight <tag> out = 8; </tag>
      </item>
      <item>
        nine <tag> out = 9; </tag>
      </item>
      <item>
        ten <tag> out = 10; </tag>
      </item>
    </one-of>
  </rule>

</grammar>